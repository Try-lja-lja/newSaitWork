<?php

require_once __DIR__ . '/../common.php';
require_once __DIR__ . '/../connect.php';

header('Content-Type: application/json; charset=utf-8');

$id = isset($_GET['id']) ? (int)$_GET['id'] : 0;
if ($id <= 0) { echo json_encode(['success'=>false,'error'=>'bad id']); exit; }

try {
    $st = $pdo->prepare("SELECT semantic_group FROM adverb WHERE word_ID = :id LIMIT 1");
    $st->execute([':id'=>$id]);
    $row = $st->fetch(PDO::FETCH_ASSOC);

    if (!$row) {
        echo json_encode(['success'=>true,'exists'=>false], JSON_UNESCAPED_UNICODE);
        exit;
    }

    echo json_encode([
        'success' => true,
        'exists'  => true,
        'semantic_group' => (string)($row['semantic_group'] ?? '')
    ], JSON_UNESCAPED_UNICODE);

} catch (Throwable $e) {
    echo json_encode(['success'=>false,'error'=>'DB error']);
}
