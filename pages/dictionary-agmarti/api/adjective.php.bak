<?php

header('Content-Type: application/json; charset=utf-8');

require_once __DIR__ . '/../common.php';
require_once __DIR__ . '/../connect.php';

$id = isset($_GET['id']) ? (int)$_GET['id'] : 0;
if ($id <= 0) {
    echo json_encode(['success' => false, 'error' => 'bad id'], JSON_UNESCAPED_UNICODE);
    exit;
}

try {
    // Берём базовую форму (для სახელობითი ს.რ.) из words.word_view
    $sql = "
        SELECT
            a.id,
            a.word_ID,
            w.word_view AS nominative_s,

            a.normal_degree,
            a.comparative_degree,
            a.superlative_degree,

            a.ergative_s,
            a.dative_s,
            a.genetive_s,
            a.instrumental_s,
            a.transformative_s,
            a.vocative_s,

            a.nominative_p,
            a.ergative_p,
            a.dative_p,
            a.genetive_p,
            a.instrumental_p,
            a.transformative_p,
            a.vocative_p
        FROM adjective AS a
        JOIN words AS w ON w.id = a.word_ID
        WHERE a.word_ID = :id
        LIMIT 1
    ";

    $stmt = $pdo->prepare($sql);
    $stmt->execute([':id' => $id]);
    $row = $stmt->fetch(PDO::FETCH_ASSOC);

    if (!$row) {
        echo json_encode(['success' => true, 'exists' => false], JSON_UNESCAPED_UNICODE);
        exit;
    }

    $norm = static function ($v) {
        $v = trim((string)$v);
        return ($v === '' || $v === '-') ? '' : $v;
    };

    // степени качества
    $degrees = [
        'positive'    => $norm($row['normal_degree'] ?? ''),
        'comparative' => $norm($row['comparative_degree'] ?? ''),
        'superlative' => $norm($row['superlative_degree'] ?? ''),
    ];

    // падежи (как у существительного)
    $order = ['nominative','ergative','dative','genitive','instrumental','transformative','vocative'];
    $labels = [
        'nominative'     => 'სახელობითი',
        'ergative'       => 'მოთხრობითი',
        'dative'         => 'მიცემითი',
        'genitive'       => 'ნათესაობითი',
        'instrumental'   => 'მოქმედებითი',
        'transformative' => 'ვითარებითი',
        'vocative'       => 'წოდებითი',
    ];

    $cases = [
        'nominative'    => ['s' => $norm($row['nominative_s'] ?? ''),     'p' => $norm($row['nominative_p'] ?? '')],
        'ergative'      => ['s' => $norm($row['ergative_s'] ?? ''),       'p' => $norm($row['ergative_p'] ?? '')],
        'dative'        => ['s' => $norm($row['dative_s'] ?? ''),         'p' => $norm($row['dative_p'] ?? '')],
        'genitive'      => ['s' => $norm($row['genetive_s'] ?? ''),       'p' => $norm($row['genetive_p'] ?? '')],
        'instrumental'  => ['s' => $norm($row['instrumental_s'] ?? ''),   'p' => $norm($row['instrumental_p'] ?? '')],
        'transformative'=> ['s' => $norm($row['transformative_s'] ?? ''), 'p' => $norm($row['transformative_p'] ?? '')],
        'vocative'      => ['s' => $norm($row['vocative_s'] ?? ''),       'p' => $norm($row['vocative_p'] ?? '')],
    ];

    echo json_encode([
        'success' => true,
        'exists'  => true,
        'degrees' => $degrees,
        'order'   => $order,
        'labels'  => $labels,
        'cases'   => $cases,
    ], JSON_UNESCAPED_UNICODE);

} catch (Throwable $e) {
    error_log('adjective.php error: ' . $e->getMessage());
    http_response_code(500);
    echo json_encode(['success' => false, 'error' => 'DB error'], JSON_UNESCAPED_UNICODE);
}
